package usaco;

import java.util.ArrayList;
import java.util.LinkedList;
import java.util.StringTokenizer;
import java.io.BufferedReader;
import java.io.PrintWriter;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;

import java.io.IOException;

public class multimoo
{
	public static int[][] map1;
	public static int indivcount = 0;

	public static void main(String[] args) throws IOException
	{
		BufferedReader f = new BufferedReader(new FileReader("multimoo.in"));
		PrintWriter out = new PrintWriter(new BufferedWriter(new FileWriter("multimoo.out")));
		StringTokenizer st = new StringTokenizer(f.readLine());
		int size = Integer.parseInt(st.nextToken());
		map1 = new pos[size][size];
		for (int i = 0; i < size; i++)
		{
			st = new StringTokenizer(f.readLine());
			for (int j = 0; j < size; j++)
				map1[i][j] = new pos(Integer.parseInt(st.nextToken()), i, j);
		}
		int max = 0;
		for (int i = 0; i < size; i++)
			for (int j = 0; j < size; j++)
				if (map1[i][j].num != -1)
					max = Math.max(max, ff(i, j, map1[i][j].num));

		out.println(indivcount);
		out.println(max);
		out.close();
		f.close();
	}

	public static int ff(int x, int y, int id)
	{
		map1[x][y].num=-1;
		int count=0;
		int[] dx =
				{ 0, 0, 1, -1 };
			int[] dy =
				{ 1, -1, 0, 0 };
			for (int i = 0; i < 4; i++)
				if (x + dx[i] > -1 && map1[x][y].x + dx[i] < map1.length && map1[x][y].y + dy[i] > -1 && map1[x][y].y + dy[i] < map1.length
						&& map1[map1[x][y].x + dx[i]][col + dy[i]])
					flood(row + dx[i], col + dy[i]);
	}
}
