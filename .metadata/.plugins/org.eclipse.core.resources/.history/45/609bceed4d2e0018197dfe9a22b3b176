
package usaco;

// import java.util.StringTokenizer;
// import java.io.BufferedReader;
// import java.io.PrintWriter;
// import java.io.BufferedWriter;
// import java.io.FileReader;
// import java.io.FileWriter;

import java.io.IOException;

public class hps
{
	public static void main(String[] args) throws IOException
	{
		BufferedReader f = new BufferedReader(new FileReader("hps.in"));
		PrintWriter out = new PrintWriter(new BufferedWriter(new FileWriter("hps.out")));
		StringTokenizer st = new StringTokenizer(f.readLine());
		int matches = Integer.parseInt(st.nextToken());
		int[] predict = new int[matches];
		for (int i = 0; i < matches; i++)
		{
			st = new StringTokenizer(f.readLine());
			String picked = st.nextToken();
			if (picked.equals("H"))
				predict[i] = 1;
			else if (picked.equals("P"))
				predict[i] = 2;
			else
				predict[i] = 3;
		}

		int max = 0;
		int[][] counting = new int[9][matches];
		for (int i = 0; i < matches; i++)
			for (int choose1 = 1; choose1 < 4; choose1++)
			{
				int count = 0;
				for (int j = 0; j < i; j++)
					if (beat(choose1, predict[j]))
						count++;
				for (int choose2 = 1; choose2 < 4; choose2++)
					for (int j = i; j < matches; j++)
						if (beat(choose2, predict[j]))
							count++;
				if (count > max)
					max = count;
			}

		out.println(max);
		out.close();
		f.close();
	}

	public static boolean beat(int b, int j)
	{
		if (j == 1)
			return b == 2;
		if (j == 2)
			return b == 3;
		return b == 1;
	}
}
