package usaco;

import java.util.Scanner;

public class pageant
{
	public static int[][] grid;

	public static void main(String[] args)
	{
		Scanner scan = new Scanner(System.in);
		int rows=scan.nextInt(),cols=scan.nextInt();
		grid = new int[rows][cols];
		for (int i = 0; i < rows; i++)
		{
			String[] line = scan.next().split("");
			for (int j = 0; j < cols; j++)
				if (line[j].equals("X"))
					grid[i][j] = -1;
		}

		int count = 1;
		for (int i = 0; i < rows; i++)
			for (int j = 0; j < cols; j++)
				if (grid[i][j]==-1)
				{
					flood(i, j,count);
					count++;
				}

		System.out.println(count);
		scan.close();
	}

	public static void flood(int row, int col,int fill)
	{
		grid[row][col] = fill;

		int[] dx =
			{ 0, 0, 1, -1 };
		int[] dy =
			{ 1, -1, 0, 0 };
		for (int i = 0; i < 4; i++)
			if (row + dx[i] > -1 && row + dx[i] < grid.length && col + dy[i] > -1 && col + dy[i] < grid[0].length
					&& grid[row + dx[i]][col + dy[i]==-1])
				flood(row + dx[i], col + dy[i]);
	}
}
