// package usaco;

import java.io.*;          // put tester in file into usaco not bin/src the
					          // folder with bin/src in it
import java.util.*;
import java.util.StringTokenizer;

public class hps
{
	public static int solve(int[] moves, boolean switchable, int i, int switcher)
	{
		int max = 0;
		int temp = 0;
		if (moves.length == i)
			return 0;
		if (switcher > moves[i] || (switcher == 1 && moves[i] == 3))
			temp = 1;
		if (switchable)
		{
			int a = solve(moves, false, i + 1, 1);
			int b = solve(moves, false, i + 1, 2);
			int c = solve(moves, false, i + 1, 3);
			if (switcher == 1)
				max = Math.max(b, c);
			else if (switcher == 2)
				max = Math.max(a, c);
			else if (switcher == 3)
				max = Math.max(b, a);
			// System.out.println(max);
		}
		max = Math.max(max, solve(moves, switchable, i + 1, switcher)) + temp;
		System.out.print(max - temp + " " + switcher + " " + switchable + "\n");
		return max;
	}

	public static void main(String[] args) throws IOException
	{
		BufferedReader f = new BufferedReader(new FileReader("hps.in"));
		PrintWriter out = new PrintWriter(new BufferedWriter(new FileWriter("hps.out")));
		StringTokenizer st = new StringTokenizer(f.readLine());
		int n = Integer.parseInt(st.nextToken());
		int[] moves = new int[n];
		for (int i = 0; i < n; i++)// h1 p2 s3
		{
			st = new StringTokenizer(f.readLine());
			String a = st.nextToken();
			if (a.equals("H"))
				moves[i] = 1;
			else if (a.equals("P"))
				moves[i] = 2;
			else if (a.equals("S"))
				moves[i] = 3;
		}
		// int n=5;
		// int[] moves=new int[n];
		// moves[0]=2;
		// moves[1]=2;
		// moves[2]=1;
		// moves[3]=2;
		// moves[4]=3;
		out.println(
				Math.max(Math.max(solve(moves, true, 0, 1), solve(moves, true, 0, 2)), solve(moves, true, 0, 3)) - 1);
		out.close();
		f.close();
	}
}