
package usaco;

// import java.util.StringTokenizer;
// import java.io.BufferedReader;
// import java.io.PrintWriter;
// import java.io.BufferedWriter;
// import java.io.FileReader;
// import java.io.FileWriter;

import java.io.IOException;

public class hps
{
	public static void main(String[] args) throws IOException
	{
		BufferedReader f = new BufferedReader(new FileReader("hps.in"));
		PrintWriter out = new PrintWriter(new BufferedWriter(new FileWriter("hps.out")));
		StringTokenizer st = new StringTokenizer(f.readLine());
		int matches = Integer.parseInt(st.nextToken());
		int[] predict = new int[matches];
		int[][] counting = new int[3][3];
		for (int i = 0; i < matches; i++)
		{
			st = new StringTokenizer(f.readLine());
			String picked = st.nextToken();
			if (picked.equals("H"))
				predict[i] = 0;
			else if (picked.equals("P"))
				predict[i] = 1;
			else
				predict[i] = 2;
			for (int j = 0; j < 8; j++)
				counting[j / 3][j % 3] += beat(j, predict[i]) ? 1 : 0;
		}

		int max = 0;
		for (int i = 0; i < matches; i++)
			for (int choose1 = 0; choose1 < 3; choose1++)
				for (int choose2 = 0; choose2 < 3; choose2++)
				{
					boolean beat = beat(choose1, predict[i]);
					counting[choose1][choose2] += beat ? 1 : 0;
					int count = counting[choose1][choose2];

					for (int j = i; j < matches; j++)
						if (beat(choose2, predict[j]))
							count++;
					if (count > max)
						max = count;
				}

		out.println(max);
		out.close();
		f.close();
	}

	public static boolean beat(int b, int j)
	{
		if (j == 0)
			return b == 1;
		if (j == 1)
			return b == 2;
		return b == 0;
	}
}
