
// package usaco;

import java.util.ArrayList;
import java.util.Collections;
import java.util.HashMap;
import java.util.StringTokenizer;
import java.io.BufferedReader;
import java.io.PrintWriter;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;

import java.io.IOException;

public class sort
{
	public static void main(String[] args) throws IOException
	{
		BufferedReader f = new BufferedReader(new FileReader("sort.in"));
		PrintWriter out = new PrintWriter(new BufferedWriter(new FileWriter("sort.out")));
		StringTokenizer st = new StringTokenizer(f.readLine());
		int num = Integer.parseInt(st.nextToken());
		int[] A = new int[num];
		HashMap<Integer, Integer> C = new HashMap<>(num);
		ArrayList<Integer> B = new ArrayList<>(num);
		for (int i = 0; i < num; i++)
		{
			st = new StringTokenizer(f.readLine());
			A[i] = Integer.parseInt(st.nextToken());
			B.add(A[i]);
			C.put(A[i], i);
		}
		int count = 0;
		boolean sorted = false;
		Collections.sort(B);
		while (!sorted)
		{
			sorted = true;

			for (int i = 0; i < num - 1 - count; i++)
				if (A[i] > A[i + 1])
				{
					int nextnumidx = C.get(B.get(idxOf(B, A[i]) + 1));
					sorted = false;
				}
			count++;
		}
		out.println(count);
		out.close();
		f.close();
	}

	public static int idxOf(ArrayList<Integer> B, int val)
	{
		int min = 0, max = B.size() - 1;
		while (min != max)
		{
			int mid = (min + max) / 2;
			if (mid == val)
				return val;
			else if (mid < val)
				min = mid + 1;
			else
				max = mid;
		}
		return min;
	}
}
